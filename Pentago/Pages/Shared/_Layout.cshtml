@inject SignInManager<IdentityUser> _signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Pentago</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav>
        <a asp-page="/Index">Pentago</a>
        <a asp-page="/Play">Play</a>
        <partial name="_LoginPartial"/>
    </nav>
</header>
<div>
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer>
    <div>
        &copy; 2021 - Pentago - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>